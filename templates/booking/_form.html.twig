{{ form_start(form) }}

    <div class="d-flex mb-3">
        <div class="container-fluid">
        {{ form_label(form.beginAt, null, {'label_attr': {'style': 'width:100%;text-align:end',}}) }}
        </div>
        <div class="container-fluid ">
        {{ form_widget(form.beginAt) }}
        </div>
    </div>

    <div class="d-flex mb-3">
        <div class="container-fluid">
        {{ form_label(form.endAt, null, {'label_attr': {'style': 'width:100%;text-align:end'}}) }}
        </div>
        <div class="container-fluid">
        {{ form_widget(form.endAt) }}
        </div>
    </div>

    <div class="d-flex mb-3 me-0">
        <div style='min-width:30%'></div>
        <div class="form-check">{{ form_row(form.matin, {'attr':{'class':'form-check-input'}}) }}</div>
        <div class="form-check">{{ form_row(form.aprem, {'attr':{'class':'form-check-input'}}) }}</div>
        <div class="form-check">{{ form_row(form.journee, {'attr':{'class':'form-check-input'}}) }}</div>
    </div>

    {{ form_rest(form) }}
    <div class="d-flex justify-content-end">
        <button class="btn btn-success" novalidate>{{ button_label|default('Sauvegarder') }}</button>
    </div>

{{ form_end(form) }}
